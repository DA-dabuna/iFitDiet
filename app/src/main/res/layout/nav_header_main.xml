<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/iv_navi"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:clickable="true"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/tv_orange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_navi"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:layout_marginLeft="30dp"
        android:text="Orange团队"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_navi"
        android:layout_marginLeft="30dp"
        android:text="iFitDiet"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
    <Button
        android:id="@+id/bt_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:layout_below="@id/tv_orange"
        android:layout_toRightOf="@id/iv_navi"
        android:textColor="@color/white"
        android:background="@android:color/transparent"
        android:onClick="register"
        />

    <Button
        android:id="@+id/bt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:layout_below="@id/tv_orange"
        android:layout_toRightOf="@id/iv_navi"
        android:layout_toEndOf="@id/bt_register"
        android:textColor="@color/white"
        android:background="@android:color/transparent"
        android:onClick="login"
        />
</RelativeLayout>
