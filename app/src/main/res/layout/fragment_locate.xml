                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/tv_no2_name"
                android:layout_below="@id/tv_no2_name"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/iv_no2"
                android:text="营养信息："
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_no2_location"
