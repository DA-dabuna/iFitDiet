                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_no2_info"
                android:layout_toEndOf="@id/iv_no2_location"
                android:text="距您600米"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/no3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/no2"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="@color/white"

            android:onClick="no1">

            <com.orange.ifitdiet.common.MyImageView
                android:id="@+id/iv_no3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/hdjtdf" />

            <TextView
                android:id="@+id/tv_no3_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_no3"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/iv_no3"
                android:text="户大姐土豆粉"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_no3_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/tv_no3_name"
                android:layout_below="@id/tv_no3_name"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/iv_no3"
                android:text="营养信息："
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_no3_location"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_below="@id/tv_no3_info"
