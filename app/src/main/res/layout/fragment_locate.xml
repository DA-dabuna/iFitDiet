                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_no4_location"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_below="@id/tv_no4_info"
                android:layout_marginStart="8dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@id/iv_no4"
                android:src="@drawable/locationping" />

            <TextView
                android:id="@+id/no4_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_no4_info"
                android:layout_toEndOf="@id/iv_no4_location"
                android:text="距您700米"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/no5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/no4"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="@color/white"

            android:onClick="no1">

            <com.orange.ifitdiet.common.MyImageView
